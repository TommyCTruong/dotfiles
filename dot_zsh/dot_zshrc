### make a directory and cd  into
function mkcd {
  if [ ! -n "$1" ]; then
    echo "Enter a directory name"
  elif [ -d $1 ]; then
    echo "\`$1' already exists"
  else
    mkdir $1 && cd $1
  fi
}
### Dynamic title bar for alacritty
preexec() { print -Pn "\e]0;$1%~\a" } -- show last command name + working directory
